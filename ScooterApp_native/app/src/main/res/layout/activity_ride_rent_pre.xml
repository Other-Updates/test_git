<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_white"
                android:layout_marginLeft="@dimen/_5sdp"/>
            <TextView
                android:id="@+id/txtHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/ride_rent"
                style="@style/SOHeader"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_160sdp"
                android:layout_margin="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:visibility="visible"
                app:cardElevation="5dp">
                <ImageView
                    android:id="@+id/imgMap"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_160sdp"
                    android:background="@color/green"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:text="@string/ride_payment"
                style="@style/SOTitle"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                app:layout_constraintBottom_toTopOf="@+id/btnSubmit"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp">

                        <TextView
                            android:id="@+id/txtStartTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="@string/starttime"
                            android:textColor="@color/font_color_1"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/txtStartTimeValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_margin="@dimen/_5sdp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textColor="@color/font_color_1"
                            android:textSize="12sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp">
                        <TextView
                            android:id="@+id/txtEndTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/endtime"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="@color/font_color_1"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/txtEndTimeValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textColor="@color/font_color_1"
                            android:textSize="12sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp">
                        <TextView
                            android:id="@+id/txtRideDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ride_distance"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="@color/font_color_1"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/txtRideDistanceValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5KM"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textColor="@color/font_color_1"
                            android:textSize="12sp"/>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                app:layout_constraintBottom_toTopOf="@+id/btnSubmit"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp">

                        <TextView
                            android:id="@+id/txtPlanPurchasedLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="@string/plan_purchased"
                            android:textColor="@color/font_color_1"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txtPlanPurchased"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:text="10 Minutes"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textColor="@color/font_color_1"
                            android:textSize="12sp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp">
                        <TextView
                            android:id="@+id/txtPaidAmountLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/paid_amount"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="@color/font_color_1"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/txtPaidAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20SAR"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textColor="@color/font_color_1"
                            android:textSize="12sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp">
                        <TextView
                            android:id="@+id/txtUtilizedTimeLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/utilized_time"
                            android:layout_margin="@dimen/_5sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="@color/font_color_1"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/txtUtilizedTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:text="6 Minutes"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textColor="@color/font_color_1"
                            android:textSize="12sp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp">
                        <TextView
                            android:id="@+id/txtRemainingTimeLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/remaining_time"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="@color/font_color_1"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/txtRemainingTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4 Minutes"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textColor="@color/font_color_1"
                            android:textSize="12sp"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/divider"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp">
                        <TextView
                            android:id="@+id/txtRideTimeLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payable time - 7 Mins"
                            android:layout_margin="@dimen/_5sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="@color/font_color_1"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/txtRideRentValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20SAR"
                            android:layout_alignParentRight="true"
                            android:layout_margin="@dimen/_5sdp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textColor="@color/font_color_1"
                            android:textSize="12sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp">

                        <TextView
                            android:id="@+id/txtUnlock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="@string/unlock_charge"
                            android:textColor="@color/font_color_1"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/txtUnlockChargeValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20SAR"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textColor="@color/font_color_1"
                            android:textSize="12sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp">

                        <TextView
                            android:id="@+id/txtSubTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="@string/subtotal"
                            android:textColor="@color/font_color_1"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/txtSubTotalValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20SAR"
                            android:layout_alignParentRight="true"
                            android:layout_margin="@dimen/_5sdp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textColor="@color/font_color_1"
                            android:textSize="12sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp">
                        <TextView
                            android:id="@+id/txtVat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/vat"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="@color/font_color_1"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/txtVatValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20SAR"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textColor="@color/font_color_1"
                            android:textSize="12sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:background="@color/light_green_1">
                        <TextView
                            android:id="@+id/txtGrandTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/grand_total"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="@color/font_color_1"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/txtGrandTotalValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="20SAR"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textColor="@color/font_color_1"
                            android:textSize="12sp"/>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/light_green_1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:layout_gravity="center_vertical">
                    <TextView
                        android:id="@+id/txtAddedToWallet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:text="@string/remaining_amount"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/font_color_1"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/txtWalletAmountAdded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text=""
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textColor="@color/font_color_1"
                        android:textSize="12sp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnContinue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/SOButton"
                android:text="@string/btncontinue"
                android:layout_margin="@dimen/_10sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_5sdp"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/txtReport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report"
                    android:textColor="@color/green"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:textSize="12sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>