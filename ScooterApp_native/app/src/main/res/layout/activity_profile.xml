<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_close_white"
                android:layout_marginLeft="@dimen/_5sdp"/>
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/profile"
                style="@style/SOHeader"
                />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/imgUser"
        android:layout_width="@dimen/_13sdp"
        android:layout_height="@dimen/_13sdp"
        android:src="@drawable/ic_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nameTitle"
        app:layout_constraintBottom_toBottomOf="@id/nameTitle"
        android:layout_margin="@dimen/_10sdp"/>
    <TextView
        android:id="@+id/nameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toEndOf="@+id/imgUser"
        android:text="@string/nametitle"
        android:layout_margin="@dimen/_10sdp"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/font_color_3"
        android:textSize="@dimen/_12sdp"/>
    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nameTitle"
        app:layout_constraintStart_toEndOf="@+id/imgUser"
        android:text="Name of the user"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/font_color_4"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_13sdp"/>
    <View
        android:id="@+id/dividerName"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_margin="@dimen/_10sdp"
        android:background="@color/divider"
        app:layout_constraintTop_toBottomOf="@id/txtName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/imgDOB"
        android:layout_width="@dimen/_13sdp"
        android:layout_height="@dimen/_13sdp"
        android:src="@drawable/ic_dob"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dobTitle"
        app:layout_constraintBottom_toBottomOf="@id/dobTitle"
        android:layout_margin="@dimen/_10sdp"/>
    <TextView
        android:id="@+id/dobTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dividerName"
        app:layout_constraintStart_toEndOf="@+id/imgDOB"
        android:text="@string/dob"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/font_color_3"
        android:layout_margin="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"/>
    <TextView
        android:id="@+id/txtDOB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dobTitle"
        app:layout_constraintStart_toEndOf="@+id/imgDOB"
        android:text="04 Jun 1990"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/font_color_4"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_13sdp"/>
    <View
        android:id="@+id/dividerDob"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_margin="@dimen/_10sdp"
        android:background="@color/divider"
        app:layout_constraintTop_toBottomOf="@id/txtDOB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/imgGender"
        android:layout_width="@dimen/_13sdp"
        android:layout_height="@dimen/_13sdp"
        android:src="@drawable/ic_gender"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/genderTitle"
        app:layout_constraintBottom_toBottomOf="@id/genderTitle"
        android:layout_margin="@dimen/_10sdp"/>
    <TextView
        android:id="@+id/genderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dividerDob"
        app:layout_constraintStart_toEndOf="@+id/imgGender"
        android:text="@string/gender"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/font_color_3"
        android:layout_margin="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"/>
    <TextView
        android:id="@+id/txtGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/genderTitle"
        app:layout_constraintStart_toEndOf="@+id/imgGender"
        android:text="Male"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/font_color_4"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_13sdp"/>
    <View
        android:id="@+id/dividerGender"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_margin="@dimen/_10sdp"
        android:background="@color/divider"
        app:layout_constraintTop_toBottomOf="@id/txtGender"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/imgMobNo"
        android:layout_width="@dimen/_13sdp"
        android:layout_height="@dimen/_13sdp"
        android:src="@drawable/ic_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mobNoTitle"
        app:layout_constraintBottom_toBottomOf="@id/mobNoTitle"
        android:layout_margin="@dimen/_10sdp"/>
    <TextView
        android:id="@+id/mobNoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dividerGender"
        app:layout_constraintStart_toEndOf="@+id/imgMobNo"
        android:text="@string/mobno"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/font_color_3"
        android:layout_margin="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"/>
    <TextView
        android:id="@+id/txtMobNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mobNoTitle"
        app:layout_constraintStart_toEndOf="@+id/imgMobNo"
        android:text="+95 5555 5555 555"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/font_color_4"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_13sdp"/>
    <View
        android:id="@+id/dividerMobNo"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_margin="@dimen/_10sdp"
        android:background="@color/divider"
        app:layout_constraintTop_toBottomOf="@id/txtMobNo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/imgEmail"
        android:layout_width="@dimen/_13sdp"
        android:layout_height="@dimen/_13sdp"
        android:src="@drawable/ic_mail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/emailTitle"
        app:layout_constraintBottom_toBottomOf="@id/emailTitle"
        android:layout_margin="@dimen/_10sdp"/>
    <TextView
        android:id="@+id/emailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dividerMobNo"
        app:layout_constraintStart_toEndOf="@+id/imgEmail"
        android:text="@string/email"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/font_color_3"
        android:layout_margin="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"/>
    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/emailTitle"
        app:layout_constraintStart_toEndOf="@+id/imgEmail"
        android:text="Name of the user"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/font_color_4"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_13sdp"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_margin="@dimen/_10sdp"
        android:background="@color/divider"
        app:layout_constraintTop_toBottomOf="@id/txtEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:backgroundTint="@color/green"
        android:src="@drawable/ic_edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>