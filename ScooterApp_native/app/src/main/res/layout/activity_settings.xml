<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green_1">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_white"
                android:layout_marginLeft="@dimen/_5sdp"/>
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/settings"
                style="@style/SOHeader"
                />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/imgChangeMob"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_change_mob"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:layout_margin="@dimen/_15sdp"/>
    <TextView
        android:id="@+id/txtChangeNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/changenumber"
        app:layout_constraintStart_toEndOf="@+id/imgChangeMob"
        app:layout_constraintTop_toTopOf="@+id/imgChangeMob"
        app:layout_constraintBottom_toBottomOf="@+id/imgChangeMob"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/font_color_4"
        android:textSize="14sp"
        android:layout_marginLeft="@dimen/_15sdp"/>

    <View
        android:id="@+id/dividerMobNo"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@+id/imgChangeMob"
        android:background="@color/divider"/>

    <ImageView
        android:id="@+id/imgChangMail"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_change_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dividerMobNo"
        android:layout_margin="@dimen/_15sdp"/>
    <TextView
        android:id="@+id/txtChangeMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/changemail"
        app:layout_constraintStart_toEndOf="@+id/imgChangMail"
        app:layout_constraintTop_toTopOf="@+id/imgChangMail"
        app:layout_constraintBottom_toBottomOf="@+id/imgChangMail"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/font_color_4"
        android:textSize="14sp"
        android:layout_marginLeft="@dimen/_15sdp"/>

    <View
        android:id="@+id/dividerMail"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@+id/imgChangMail"
        android:background="@color/divider"/>

    <ImageView
        android:id="@+id/imgChangPass"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_change_pass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dividerMail"
        android:layout_margin="@dimen/_15sdp"/>
    <TextView
        android:id="@+id/txtChangePass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/changepassword"
        app:layout_constraintStart_toEndOf="@+id/imgChangPass"
        app:layout_constraintTop_toTopOf="@+id/imgChangPass"
        app:layout_constraintBottom_toBottomOf="@+id/imgChangPass"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/font_color_4"
        android:textSize="14sp"
        android:layout_marginLeft="@dimen/_15sdp"/>

    <View
        android:id="@+id/dividerPass"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@+id/imgChangPass"
        android:background="@color/divider"/>

    <ImageView
        android:id="@+id/imgChangLang"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_language"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dividerPass"
        android:layout_margin="@dimen/_15sdp"/>
    <TextView
        android:id="@+id/txtChangeLang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Language"
        app:layout_constraintStart_toEndOf="@+id/imgChangLang"
        app:layout_constraintTop_toTopOf="@+id/imgChangLang"
        app:layout_constraintBottom_toBottomOf="@+id/imgChangLang"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/font_color_4"
        android:textSize="14sp"
        android:layout_marginLeft="@dimen/_15sdp"/>

</androidx.constraintlayout.widget.ConstraintLayout>