<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    tools:context=".activities.AddCreditCardActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                android:layout_marginLeft="@dimen/_5sdp"/>
            <TextView
                android:id="@+id/txtHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/addcreditcard"
                style="@style/SOHeader"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/addcreditcard"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        style="@style/SOTitle"/>

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nameoncard"
        android:fontFamily="@font/montserrat_medium"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"/>

    <EditText
        android:id="@+id/edtName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtName"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="16sp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/bg_edt"
        android:hint="@string/nameoncardhint"
        android:padding="@dimen/_8sdp"/>

    <TextView
        android:id="@+id/txtCardNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cardnumber"
        android:fontFamily="@font/montserrat_medium"
        app:layout_constraintTop_toBottomOf="@+id/edtName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"/>

    <LinearLayout
        android:id="@+id/llCardNo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCardNo"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:hint="@string/nameoncardhint"
        android:orientation="horizontal"
        android:weightSum="4">
        <EditText
            android:id="@+id/edtCardNo1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            android:layout_weight="0.99"
            android:background="@drawable/bg_edt"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="16sp"
            android:inputType="number"
            android:maxLength="4"
            android:maxLines="1"
            android:gravity="center_horizontal"
            android:hint="@string/cardnohint"/>
        <EditText
            android:id="@+id/edtCardNo2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            android:layout_weight="0.99"
            android:background="@drawable/bg_edt"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="16sp"
            android:inputType="number"
            android:maxLength="4"
            android:maxLines="1"
            android:layout_marginLeft="@dimen/_10sdp"
            android:gravity="center_horizontal"
            android:hint="@string/cardnohint"/>
        <EditText
            android:id="@+id/edtCardNo3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            android:layout_weight="0.99"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/bg_edt"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="16sp"
            android:inputType="number"
            android:maxLength="4"
            android:maxLines="1"
            android:gravity="center_horizontal"
            android:hint="@string/cardnohint"/>
        <EditText
            android:id="@+id/edtCardNo4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:padding="@dimen/_8sdp"
            android:layout_weight="0.99"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="16sp"
            android:inputType="number"
            android:background="@drawable/bg_edt"
            android:maxLength="4"
            android:maxLines="1"
            android:gravity="center"
            android:hint="@string/cardnohint"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/txtExpiry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/expiry"
        android:fontFamily="@font/montserrat_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llCardNo"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"/>

    <EditText
        android:id="@+id/edtMonth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:maxLines="1"
        android:maxLength="2"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="16sp"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/txtExpiry"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/bg_edt"
        android:hint="MM"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:paddingRight="@dimen/_15sdp"
        android:paddingLeft="@dimen/_15sdp"/>

    <TextView
        android:id="@+id/txtSlash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/edtMonth"
        app:layout_constraintTop_toBottomOf="@+id/txtExpiry"
        android:text="/"
        android:textSize="@dimen/_20sdp"
        android:textColor="@color/font_color_2"
        android:layout_margin="@dimen/_8sdp"/>

    <EditText
        android:id="@+id/edtYear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/txtSlash"
        android:maxLines="1"
        android:maxLength="2"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="16sp"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/txtExpiry"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/bg_edt"
        android:hint="YY"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:paddingRight="@dimen/_15sdp"
        android:paddingLeft="@dimen/_15sdp"/>

    <TextView
        android:id="@+id/txtCvv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cvv"
        android:fontFamily="@font/montserrat_medium"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@id/llCardNo"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"/>

    <EditText
        android:id="@+id/edtCvv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="1"
        android:maxLength="3"
        android:inputType="numberPassword"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/txtCvv"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/bg_edt"
        android:hint="@string/cvvhint"
        android:gravity="center_horizontal"
        android:padding="@dimen/_8sdp"/>

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn"
        android:text="@string/add"
        style="@style/SOButton"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtCvv"/>


</androidx.constraintlayout.widget.ConstraintLayout>